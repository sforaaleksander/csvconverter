<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->

    <bean id="file" class="java.io.File" scope="prototype">
        <constructor-arg value="test.csv"/>
    </bean>

    <bean id="fileReader" class="com.codecool.csvconverter.filereader.FileReader">
        <constructor-arg ref="file"/>
    </bean>

    <bean id="converter" class="com.codecool.csvconverter.converter.Converter">
    <constructor-arg ref="fileReader"/> </bean>

</beans>